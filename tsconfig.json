{
  "extends": "@vue/tsconfig/tsconfig.json",
  "files": [],
  "references": [
    // { "path": "./tsconfig.app.json" },
    // { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // "@router": ["src/router/index.ts"],
    },
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
  },  
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "shims-vue.d.ts",
  ],
  "exclude": ["node_modules"],
}
